#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"


echo '游游游 Testing and building this project before commiting 游游游'

## ---------------------------------------------------
npm run lint:fix ||
(
    echo 'Eslint file fixing failed'
    false 
)
echo "ESLINT FIX SUCCESS 九九九九九九"


##----------------------------------------------------
npm run lint:check ||
(
    echo 'Eslint check failed'
    false;
)
echo "ESLINT CHECK SUCCESS 九九九九九九"


##----------------------------------------------------
npm run prettier:fix ||
(
    echo "Can't format code"
    false;
)
echo "PRETTIER FORMAT SUCCESS 九九九九九九"


##----------------------------------------------------
npm run prettier:check ||
(
    echo 'The format is disgusting'
    false;
)
echo "PRETTIER CHECK SUCCESS 九九九九九九"


#If everything passes... try to run build
echo 'Your code looks good ---> trying to build it now 游녨游녨游녨游녨游녨游녨'


